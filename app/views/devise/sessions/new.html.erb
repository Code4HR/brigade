<div class="login-box">

  <h2>Sign in</h2>

  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |form| %>

    <%= form.input :email, input_html: {class: 'span5'} %>
    <%= form.input :password, input_html: {class: 'span5'}  if @user.password_required? %>

    <% if devise_mapping.rememberable? %>
      <%= form.label :remember_me, class: 'checkbox', id: 'remember_me_checkbox' do %>
        <%= form.check_box :remember_me %>
        Remember Me
      <%end%>
    <% end %>

    <%= form.submit 'Sign in', class: 'btn-large btn-regular btn' %>
    
  <%end%>
  <div>
    <%= link_to 'forgot your password?' , new_user_password_url %>
  </div>
  <hr>
  <div class='pull-right'>
    <i>don't have an account yet?</i>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-info' %>
  </div>
  <div class='clear'></div>
</div>
