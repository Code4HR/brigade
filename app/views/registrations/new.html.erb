
<%= render "registrations/#{@source}" %>

<%= devise_error_messages! %>  
  <%= simple_form_for @user, as: resource_name, url: registration_path(resource_name), html:{class:'form-inline'} do |form| %>
    <input type="hidden" name="source" value="<%= @source %>" />
    <%= form.input :full_name, input_html: {class: 'span3', value: @user.full_name}, required: false  %>
    <%= form.input :email, input_html: {class: 'span3', value: @user.email} %>
    <%= render partial: 'shared/location_select', locals: { f: form } %>
<!--    <%= form.input :location, input_html: {class: 'span3', value: @user.location}, label: "City, State" %>-->
    <%= form.input :password, input_html: {class: 'span3'} if @user.password_required? %>
    <%= form.input :work_in_government, as: :boolean, label_html: {class: "checkbox"}, label:"I work in government", wrapper: :checkbox  %>
    <%= form.input :human_check, input_html: {class: 'hidden'}, label: false %>

    <% if @source == "organizer" %>
    <%= form.input :willing_to_organize, collection: [[true, "I'm in. Sign me up to help organize."] ,[false, 'No thanks, but keep me in the loop.']], as: :radio_buttons,  value: @user.willing_to_organize, label: false, :label_method => :last, :value_method => :first  %>

    <%end%>
    
    <%= form.submit "Signup", class: 'btn-large btn btn-primary' %>
    <!--
    or
    <%= link_to "Sign up with Github", user_omniauth_authorize_path(:github), class: 'btn-large btn-info' unless @user.github_uid.present? %>
    -->
 <%end%>


